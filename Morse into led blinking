    delay(slash);
  }
  else if(ch=='y')
  {
    digitalWrite(LED_BUILTIN,HIGH);  
    delay(slash);
    digitalWrite(LED_BUILTIN,LOW);
    delay(dot);
    /*---------------------------------*/
    digitalWrite(LED_BUILTIN,HIGH);  
    delay(dot);
    digitalWrite(LED_BUILTIN,LOW);
    delay(dot);
    /*---------------------------------*/
    digitalWrite(LED_BUILTIN,HIGH);  
    delay(slash);
    digitalWrite(LED_BUILTIN,LOW);
    delay(dot);
    /*---------------------------------*/
    digitalWrite(LED_BUILTIN,HIGH);  
    delay(slash);
    digitalWrite(LED_BUILTIN,LOW);
    delay(slash);
  }
  else if(ch=='z')
  {
    digitalWrite(LED_BUILTIN,HIGH);  
    delay(slash);
    digitalWrite(LED_BUILTIN,LOW);
    delay(dot);
    /*---------------------------------*/
    digitalWrite(LED_BUILTIN,HIGH);  
    delay(slash);
    digitalWrite(LED_BUILTIN,LOW);
