int dot=100;
int slash = 3*dot;
void morse(char ch)
{
  if(ch=='a')
  {
    digitalWrite(LED_BUILTIN,HIGH);
    delay(dot);
    digitalWrite(LED_BUILTIN,LOW);
    delay(dot);
    /*---------------------------------*/
    digitalWrite(LED_BUILTIN,HIGH);
    delay(slash);
    digitalWrite(LED_BUILTIN,LOW);
    delay(slash);
  }
  else if(ch=='b')
  {
    digitalWrite(LED_BUILTIN,HIGH);  //Dash
    delay(slash);
    digitalWrite(LED_BUILTIN,LOW);
    delay(dot);
    /*---------------------------------*/
    digitalWrite(LED_BUILTIN,HIGH);  //Dot
    delay(dot);
    digitalWrite(LED_BUILTIN,LOW);
    delay(dot);
    /*---------------------------------*/
    digitalWrite(LED_BUILTIN,HIGH);  //Dot
    delay(dot);
    digitalWrite(LED_BUILTIN,LOW);
    delay(dot);
    /*---------------------------------*/
    digitalWrite(LED_BUILTIN,HIGH);  //Dot
    delay(dot);
    digitalWrite(LED_BUILTIN,LOW);
